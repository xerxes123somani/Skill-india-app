<ScrManager>:
	LoginScreen:
		name:'login'
	MainScreen:
		name:'mainn'
	Nsdc:
		name:'nsdc'
	NsdcTrain:
		name:'nsdctrain'
<LoginScreen>:
	id:login
	name:'login'
	username:username
	password:create_pass
	cnfrm_pass:cnfrm_pass
	email:email
	phonno:phonnumber
	accnt_name:Name
	BoxLayout:
		FloatLayout:
			Image:
				source:'/storage/emulated/0/Download/images.png'
				pos_hint:{'x':.2 , 'y': .70}
				size_hint:(.6,.35)
				allow_stretch:True
			MDTextField:
				id:username
    			hint_text: "Username"
    			required: True
    			helper_text_mode: "on_error"
    			helper_text: "Enter Username "
    			helper_text_mode:"on_focus"
    			size_hint:(.6,.08)
				pos_hint:{'x':.2,'y':.66}
			
			MDTextField:
				id:Name
    			hint_text: "name"
    			required: True
    			helper_text_mode: "on_error"
    			helper_text: "Enter name "
    			size_hint:(.6,.08)
				pos_hint:{'x':.2,'y':.58}
			
			MDTextField:
				id:email
    			hint_text: "Email"
    			required: True
    			helper_text_mode: "on_error"
    			helper_text: "Enter email "
    			helper_text_mode:'on_focus'
    			size_hint:(.6 ,.08)
				pos_hint:{'x':.2 ,'y':.5}
			
			MDTextField:
				id:phonnumber
    			hint_text: "Phone no."
    			required: True
    			helper_text_mode: "on_error"
    			helper_text: "Enter phone no."
    			helper_text_mode:'on_focus'
    			size_hint:(.6,.08)
				pos_hint:{'x':.2,'y':.42}
			
			MDTextField:
				id:create_pass
    			hint_text: "Create password"
    			required: True
    			helper_text_mode: "on_error"
    			helper_text: "Enter password "
    			helper_text_mode:'on_focus'
    			size_hint:(.6,.08)
				pos_hint:{'x':.2,'y':.34}
			
			MDTextField:
				id:cnfrm_pass
    			hint_text: "Confirm password"
    			required: True
    			helper_text_mode: "on_error"
    			helper_text: "Enter password "	
    			helper_text_mode:'on_focus'
    			size_hint:(.6,.08)
				pos_hint:{'x':.2,'y':.26}
				
			MDIconButton:
				id :  sign_up_btn
				icon:"/storage/emulated/0/Download/24804-7-sign-up-button-transparent-background.png"
				pos_hint:{'x':.3,'y':.15}
				size_hint:(.4,.08)
				on_press:
					app.root.current= root.check()
			
			MDIconButton:
				id :  sign_up_btn
				icon:"/storage/emulated/0/Download/24804-7-sign-up-button-transparent-background.png"
				pos_hint:{'x':.3,'y':.05}
				size_hint:(.4,.08)
				on_press:
					app.root.current= root.login()


