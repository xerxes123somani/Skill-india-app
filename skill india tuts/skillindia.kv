<Nsdc>:
	name:'nsdc'
	FloatLayout:
		BoxLayout:
			orientation:'vertical'
			pos_hint:{'x':.02,'y':.7}
			size_hint:(.96,.3)
			Carousel:
				direction: 'right'
				loop:True
    			AsyncImage:
        			source:  'https://encrypted-tbn0.gstatic.com/images?q=tbn%3AANd9GcRePubzuYOSbfEOQLVNF1ilJJcL6VSZ0WxA9dnnuVTcKsqagqo3&usqp=CAU'
        		
    			AsyncImage:
        			source: 'https://encrypted-tbn0.gstatic.com/images?q=tbn%3AANd9GcS0-MXCblVBTgWIcrc6ScS7cP6pFucBZHXTrWWETBzHIb5eucCu&usqp=CAU'
    			AsyncImage:
        			source:  'https://encrypted-tbn0.gstatic.com/images?q=tbn%3AANd9GcS_5-8wnjBNKYjCP9D-NHJN81oWdd8Z3Y8LydGqhed1Lg7WHCON&usqp=CAU'
        		AsyncImage:
        			source:  'https://nsdcindia.org/sites/default/files/womens-day-banner.png'
        		AsyncImage:
        			source:' https://nsdcindia.org/sites/default/files/congratulations-skill-champions.jpg' 
        BoxLayout:
        	orientation:'vertical'
        	size_hint:(.96,.6)
        	pos_hint:{'x':.02,'y':.02}
        	ScrollView:
        		do_scroll_x:False
        		MDList:
        			id:container
        			MDFlatButton:
        				text:'Funding'
        			MDFlatButton:
        				text:'NSDC Training center'
        				on_press:
        					app.root.current=root.go()
        			MDFlatButton:
        				text:'Industry Partnership'
        			MDFlatButton:
        				text:'Standards and Quality Assurance'
        				
        				
        			
