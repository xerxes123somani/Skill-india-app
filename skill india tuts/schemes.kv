
<Schemes>:
    id:Schemes
    name:"Schemes"
    scheme_screen_manager:
    BoxLayout:
        orientation:'vertical'
        size_hint:1,.9
        ScrollView:
            do_scroll_x:False
            DrawerList:
                MDCard:
                    orientation:'vertical'
                    focus_behavior:True
                    ripple_behavior:True
                    size_hint:.8,None
                    height:'150dp'
                    elevation:10
                    MDFloatLayout:
                        id:pmkvy_card
                        spacing:"30dp"
                        adaptive_height:True
                        orientation:'vertical'
                        AsyncImage:
                            pos_hint:{'x':0,'y':0}
                            size_hint:1,.8
                            source:'http://pmkvyofficial.org/images/logo.png'
                            
                        MDFlatButton:
                            pos_hint:{'x':0,'y':0}
                            size_hint:1,1
                            text:''
                            on_release:
                                Schemes.scheme_screen_manager.current=Schemes.PMKY()                    
                
                MDSeparator:
                MDSeparator:
                MDSeparator:
                MDSeparator:
                                
                MDCard:
                    orientation:'vertical'
                    focus_behavior:True
                    ripple_behavior:True
                    size_hint:.9,None
                    height:'150dp'
                    elevation:10
                    MDFloatLayout:
                        id:nsdc_card
                        adaptive_height:True
                        orientation:'vertical'
                        AsyncImage:
                            pos_hint:{'x':0,'y':0}
                            size_hint:1,.8
                            source:'https://partnerships.nsdcindia.org/resources/images/logo.png'
                            
                        MDFlatButton:
                            pos_hint:{'x':.1,'y':.1}
                            size_hint:1,1
                            text:''
                            on_release:
                                Schemes.scheme_screen_manager.current=Schemes.NSDC()
                            
                    
        
        
        
				
